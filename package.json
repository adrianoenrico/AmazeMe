{
  "name": "hello-world-webpack",
  "version": "1.0.0",
  "description": "A blank Koji template with webpack bundler",
  "author": "username",
  "scripts": {
    "build": "NODE_ENV=production webpack --config ./.internals/webpack.production.js --color -p --progress --hide-modules --display-optimization-bailout",
    "postbuild": "koji-tools pwa",
    "prestart": "koji-tools watch &",
    "start": "webpack-dev-server --config ./.internals/webpack.development.js --hot --inline"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madewithkoji/hello-world-webpack.git"
  },
  "keywords": [
    "Koji",
    "Hello World",
    "Webpack"
  ],
  "dependencies": {
    "koji-tools": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
